{
  "manifest_version": 3,
  "name": "Filigran Threat Management",
  "short_name": "XTM",
  "version": "0.0.1",
  "description": "Detect threat indicators and entities on web pages. Create reports and integrate with OpenCTI/OpenAEV.",
  "author": "Filigran",
  "homepage_url": "https://filigran.io",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background/index.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon-16.svg",
      "32": "assets/icons/icon-32.svg",
      "48": "assets/icons/icon-48.svg",
      "128": "assets/icons/icon-128.svg"
    },
    "default_title": "Filigran Threat Management"
  },
  "sidebar_action": {
    "default_panel": "panel/index.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png"
    },
    "default_title": "Filigran Threat Management"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "css": ["assets/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "panel/index.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "xtm@filigran.io",
      "strict_min_version": "109.0"
    }
  }
}

